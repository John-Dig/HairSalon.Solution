@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Cls</h1>

@if (@Model.Count == 0)
{
  <h3>No cls have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Cl cl in Model)
    {
      <li>@Html.ActionLink($"{cl.Description}", "Details", new { id = cl.ClId }) | @cl.St.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new cl", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>