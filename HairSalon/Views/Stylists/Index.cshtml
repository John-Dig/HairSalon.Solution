@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Sts</h1>

@if (@Model.Count == 0)
{
  <h3>No sts have been added yet!</h3>
} 

<ul>
  @foreach(St st in Model)
  {
    <li>@Html.ActionLink($"{st.Name}", "Details", new { id = st.StId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new st", "Create")</p>
<p>@Html.ActionLink("Add new Cl", "Create", "Cls")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>